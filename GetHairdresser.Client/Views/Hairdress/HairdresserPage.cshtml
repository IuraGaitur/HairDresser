@model DateTime?
@{
    DateTime hour = DateTime.Today;
    var user = ViewBag.Hairdress;  
}
<ul>
@*Photo:@user.hairdressInfo.photo*@
<li><h3>Name:@user.firstName @user.lastName</h3></li>
@*Rating:@user.hairdressInfo.rating
Map:@user.hairdressInfo.map*@
<li><h3>Location:@user.location</h3></li>
<li><h3>Age:@user.age</h3></li>
<li><h3>Gender:@user.gender</h3></li>
</ul>



<div id="main">
    <div id="left_bar">
        <h2>Work graphic</h2>
        <table class="table table-bordered" >
          <tr>
            @for (int i = 8; i < 21; i++)
            {
                if (i == Int32.Parse(hour.Hour.ToString()))
                {
                    @:<td class="warning">
                }
                else
                {
                    @:<td class="success">
                }
                @i.ToString(); @: :00 </td> 
            }    
          </tr>
          <tr>
           <div id="appoints">
             @for (int i = 8; i < 21; i++)
            {
                if (i == Int32.Parse(hour.Hour.ToString()))
                {
                    @:<td class="">X</td>
                }
                else
                {
                    @:<td class="active">V</td>
                }
            }    
           </div>
         </tr>
        </table>
      </div>
      <div id="right_bar">
          <h2>Work day</h2>
        <div>
            <input class="datepicker" id="date_picker_right" type="text" onchange="changeData()">
        </div>

      </div>
</div>
