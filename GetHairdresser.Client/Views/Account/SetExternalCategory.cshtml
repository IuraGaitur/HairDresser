@model GetHairdresser.Client.Models.UserProfile
@{
    ViewBag.Title = "SetExternalCategory";
    string hairdress = GetHairDresser.Common.BL.Entities.ClientCategory.Category.hairdress.ToString();
    string client = GetHairDresser.Common.BL.Entities.ClientCategory.Category.client.ToString();
}

        <p>
            <strong>@ViewBag.ProviderDisplayName</strong>,we succesefully got your data.
            Please choose type of profile for you.
        </p>

@using (Html.BeginForm("SetExternalCategory", "Account", FormMethod.Post, new { model = Model}))
{

     
        @Html.HiddenFor(m => m.firstName)
        @Html.HiddenFor(m => m.lastName)
        @Html.HiddenFor(m => m.age)
        @Html.HiddenFor(m => m.gender)
        @Html.HiddenFor(m => m.location)
        @Html.HiddenFor(m => m.UserFacebook)
        @Html.HiddenFor(m => m.ExternalLoginData)
    <input name="typeClient" type="submit" value="@hairdress" class="btn btn-success btn-lg " style="width:400px;height:100px"/>
    <input name="typeClient" type="submit" value="@client" class="btn btn-primary btn-lg " style="width:200px;height:100px"/>


}
