@section featured {
    
}
<div class="page-header">
    <h2>Top 10 hairdressers</h2>
</div>

<ol class="round">
   <table class="table table-bordered table-stripped">
       <tr>
           <td>Name</td>
           <td>Location</td>
           <td>Rating</td>
        </tr>
       @foreach (var item in ViewBag.Hairdressers)
       {
           string title = item.firstName + " " + item.lastName;
           <tr>
            <td>@Html.ActionLink(title,"Index","Hairdress",new {guidId = item.UserGuid.ToString()},null)</td>
             <td>@item.location.ToString()</td>
              <td>@item.hairdressInfo.rating</td>
           </tr>
       }
   </table> 
</ol>


@section scripts
{

    @Scripts.Render("/Scripts/jquery.unobtrusive-ajax.js")
    @*For datepicker and for change event a*@
    <script type="text/javascript">
        $(function () {
            $('#index').addClass("active");
        })

    </script>
}



